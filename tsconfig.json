{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "src",
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/": [
        "src/"
      ],
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@c/*": [
        "src/components/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "./*.js",
    "config/**",
    "babel.config.js",
    "jest.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
